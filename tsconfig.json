{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./src/*"],
            "@/comps/*": ["./src/components/*"],
            "@/playthrough/*": ["./src/components/playthrough/*"],
            "@/lib/*": ["./src/lib/*"],
            "@/service/*": ["./src/lib/services/*"],
            "@/types/*": ["./src/types/*"],
            "@/data/*": ["./src/data/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "src/types/electron.d.ts",
        ".next/dev/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
